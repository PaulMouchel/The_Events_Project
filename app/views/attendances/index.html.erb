<div class="container mt-3">
	<div class="row">
	    <div class="col-md-10 offset-md-1 bg-white">
	        <%= render 'events/show_img', event: @event %>
			<%= render 'events/show_desc', event: @event %>
	    </div>
	</div>


	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1">
			   	<div class="d-flex flex-row justify-content-between">
				    <%= link_to 'Retour', event_path(@event), class:"btn btn-link" %>
				    <div>
					    <%= link_to "Modifier l'évènement", edit_event_path(@event), class:"btn btn-primary mt-1" %> 
					    <%= link_to "Supprimer l'évènement", @event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger mt-1" %>
					</div>
				</div>
				<%= render 'participants_list', event: @event %>
			</div>
		</div>
	</div>
    
</div>