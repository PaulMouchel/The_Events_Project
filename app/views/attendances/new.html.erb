<br><br>
<h1 class="h3 mb-3 font-weight-normal text-center">Participer à l'évenement <%= @event.title %></h1>



<%= form_tag  event_attendances_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= @event.price %>€</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%=@event.title%>"
          data-amount="<%= @event.price*100 %>"
          data-locale="fr"
          data-currency="eur">
          </script>
<% end %>