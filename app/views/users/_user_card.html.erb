<div class="row">
    <div class="col-12">
        <div class="card text-white bg-secondary mb-3 d-flex flex-row" >
            <div class="card-header p-2 bd-highlight">
            	<%if user.user_pic.attached?%>
              		<%= image_tag user.user_pic.variant(resize: "120x120"), alt: 'user avatar', class:"mr-2 rounded-circle" %>
    			<%end%>
            </div>
            <div class="card-body p-2 bd-highlight d-flex justify-content-between w-100">
                <div class="p-2 bd-highlight">
                    <h4 class="card-title"><%= user.email %></h4>
                    <p><%= user.name %><% if user.is_admin %>  <span class="badge badge-danger">Admin</span><% end %></p>
                    <p class="mb-0 lh-125">
                        <%= user.description %>
                    </p>
                    
                    	
                    
                </div>
                <div class="bd-highlight">
                	<% if @is_admin %>
	                    <%= link_to 'Edit info', edit_admin_user_path(user), class:"btn btn-primary"%>
	                    <% if !user.is_admin %>
	                    	<%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
	                    <% end %>
	                <% else %>
	                	<%= link_to 'Edit info', edit_user_path(user), class:"btn btn-primary" %>
	                    <%= link_to "Change email / password", edit_user_registration_path, class:"btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>