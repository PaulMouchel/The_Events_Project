<h1>Events</h1>

<table class="table">
  <thead>
    <tr class="table-info">
      <th>id</th>
      <th>title</th>
      <th>start_date</th>
      <th>duration</th>
      <th>price</th>
      <th>location</th>
      <th>admin</th>
      <th>reviewed</th>
      <th>validated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.sort_by{ |event| event.start_date }.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.title %></td>
        <td><%= event.convert(event.start_date) %></td>
        <td><%= event.duration %></td>
        <td><%= event.price %></td>
        <td><%= event.location %></td>
        <td><%= link_to event.admin.email, admin_user_path(event.admin) %></td>
        <td><span class="bg-<% if event.reviewed %>success<% else %>danger<% end %> rounded-circle", style="height: 20px; width: 20px; display: inline-block;"></span></td>
        <td><span class="bg-<% if event.validated %>success<% else %>danger<% end %> rounded-circle", style="height: 20px; width: 20px; display: inline-block;"></span></td>

        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

