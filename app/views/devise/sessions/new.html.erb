<div class="container">
	<div class="row">
	    <div class="col-md-6 offset-md-3">
	      	<br><br><br>
	      	<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
	        	<h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
	        	<%= devise_error_messages! %>
	        	<%= render 'shared/form_email_field', f: f %>
	        	<%= render 'shared/form_password_field', f: f %>
	        	<% if devise_mapping.rememberable? %>
		          <div class="field">
		            <%= f.check_box :remember_me %>
		            <%= f.label :remember_me %>
		          </div>
	        	<% end %>
	        	<div class="actions mt-5">
	          		<%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
	        	</div>
	      	<% end %>
	      	<%= render "devise/shared/links" %>
	    </div>
	</div>
</div>